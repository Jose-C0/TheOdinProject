<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Categoriess</title>
  <link rel="stylesheet" href="css/base.css" />
  <link rel="stylesheet" href="css/pages/index.css" />
  <link rel="stylesheet" href="css/pages/products.css" />

</head>

<body class="grid-index">
  <header><%- include('../../partials/nav.ejs') %></header>

  <main>
    <section class="box-products">

      <% ctgs.forEach(item=> { %>
        <div class="card">
          <img src="images/<%= item.category_name %>.jpg" alt=<%=item.category_name %> class="img-card">
          <h2><%= item.category_name %></h2>
          <p><%= item.description %></p>
        </div>
        <% }); %>
        
      </section>
  </main>

  <%- include('../../partials/footer.ejs') %>
</body>

</html>